<!--                     javaType="ru.rerumu.lists.model.Book"-->
<!--                     column="{bookId=book_book_id,readListId=readListId}"-->
<!--                     select="ru.rerumu.lists.mappers.BookMapper.getOne"-->
<!--        />-->
<!--        <association property="author"-->
